rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Templates collection - allow read/write for all users
    match /templates/{templateId} {
      allow read, write: if true;
    }
    
    // MM60 metadata collection - allow read/write for all users
    match /mm60_metadata/{metadataId} {
      allow read, write: if true;
    }
    
    // MM60 data chunks collection - allow read/write for all users
    match /mm60_data/{chunkId} {
      allow read, write: if true;
    }
    
    // Users collection - allow read/write for all users
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Departments collection - allow read/write for all users
    match /departments/{deptId} {
      allow read, write: if true;
    }
    
    // Users collection - allow read/write for all users (for now)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Settings collection - allow read/write for all users (for now)
    match /settings/{settingId} {
      allow read, write: if true;
    }
    
    // Default deny for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
